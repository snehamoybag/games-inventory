<section class="developer">
  <div class="developer__coverimg-wrapper">
    <img 
      src="<%= developer.coverimg_url ? developer.coverimg_url : '/assets/images/placeholder-cover-img.jpg' %>"
      alt="cover image of <%= developer.name %>" 
      class="developer__coverimg"
    />
  </div>
  <div class="developer__header">
    <img src="<%= developer.logo_url %>" alt="logo of <%= developer.name %>" class="developer__logo">
    <h2 class="developer__title"><%= developer.name %></h2>
  </div>
  <div class="developer__body">
    <% if (developer.details) { %>
      <p class="developer__details"><%= developer.details %></p>
    <% }; %>
  </div>
  <% if (locals.isAdmin) { %>
    <div class="developer__controlls">
      <a href="/edit/developer/<%= developer.id %>" class="btn btn--edit" title="Edit developer">
        <span class="sr-only">Edit Developer</span>
      </a>
      <form action="/delete/developer/<%= developer.id %>" method="POST">
        <button 
          type="submit" 
          class="btn btn--delete" 
          title="Delete developer"
          onclick="return confirm('Are you sure you want to delete this developer?');"
        >
          <span class="sr-only">Delete Developer</span>
        </button>
      </form>
    </div>
  <% }; %>
  <%- include("./partials/gamesContainer.ejs") %>
</section>
