<% if (pagination) { %>
  <div class="pagination">
    <a href="?page=1" 
      class="pagination__link pagination__link--first"
      rel="first"
      title="first"
      <% if (pagination.currentPage === 1) { %>
        disabled
      <% }; %>
    >
      <span class="sr-only">First Page</span>
    </a>

  <% 
    let linkNum = pagination.currentPage - 2; 

    if (linkNum < 1) {
      linkNum = 1;
    }     
    else if (pagination.currentPage === pagination.lastPage -1) {
      linkNum = pagination.currentPage - 3;
    }
    else if (pagination.currentPage === pagination.lastPage) {
      linkNum = pagination.currentPage - 4;
    };

    for (let i = 0; i < 5; i += 1) { 
      if (linkNum > 0 && linkNum <= pagination.lastPage) { %>
        <a 
          href="?page=<%= linkNum %>"
          class="pagination__link <%= linkNum === pagination.currentPage ? 'pagination__link--active' : ''; %>">
          <%= linkNum %>
        </a>
    <% }; 
      linkNum += 1;
  }; %>

    <a href="?page=<%= pagination.lastPage %>"
      class="pagination__link pagination__link--last"
      rel="last"
      title="last"
      <% if (pagination.currentPage === pagination.lastPage) { %>
        disabled
      <% }; %>
    >
      <span class="sr-only">Last Page</span>
    </a>
  </div>
<% }; %>
